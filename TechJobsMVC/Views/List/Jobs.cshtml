<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @if (ViewBag.jobs.Count == 0)
    {
        <p>No jobs match this search criteria</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Jobs matching your search: </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in ViewBag.jobs)
                {
                    <tr>

                        <td>
                            <b>
                                Id: @job.Id <br />
                                Name: @job.Name <br />
                                Employer: @job.Employer <br />
                                Location: @job.Location <br />
                                Position Type: @job.PositionType <br />
                                Core Competency: @job.CoreCompetency
                            </b>
                        </td>

                    </tr>
                }
            </tbody>
        </table>


    }


</div>